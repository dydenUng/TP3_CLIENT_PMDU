<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="parametreBox" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleur.ParametreCtrl">
   <children>
      <Label fx:id="lblTitle" text="Paramètres Réseaux" />
      <GridPane hgap="7.0" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Adresse IP" />
            <RadioButton fx:id="chkIP" mnemonicParsing="false" text="Modifier" GridPane.columnIndex="1" />
            <TextField fx:id="fieldIP" disable="true" GridPane.columnSpan="2" GridPane.hgrow="NEVER" GridPane.rowIndex="1" />
            <Label text="Numéro de Port" GridPane.rowIndex="2" />
            <RadioButton fx:id="chkPort" mnemonicParsing="false" text="Modifier" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="fieldPort" disable="true" GridPane.columnSpan="2" GridPane.hgrow="NEVER" GridPane.rowIndex="3" />
            <Button fx:id="btnIPAppliquer" disable="true" mnemonicParsing="false" text="Appliquer" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button fx:id="btnPortAppliquer" disable="true" mnemonicParsing="false" text="Appliquer" GridPane.columnIndex="2" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      <HBox />
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
   </padding>
</VBox>
